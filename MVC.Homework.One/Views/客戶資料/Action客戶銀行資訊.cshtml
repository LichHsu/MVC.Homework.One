@* ------------------------------------------------ 帳戶資料 ------------------------------------------------ *@

@model IEnumerable<MVC.Homework.One.Models.客戶銀行資訊>
<br />
<th>
    <h4>帳戶資訊</h4>
   @* @Html.ActionLink("加入帳戶", "Create", "客戶銀行資訊", new { 客戶id = Model.Id }, null)*@
</th>
<table class="table">
    <tr>
        <th>
            銀行代碼
        </th>
        <th>
            分行代碼
        </th>
        <th>
            帳戶號碼
        </th>
        <th>
            帳戶名稱
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", "客戶銀行資訊", new { id = item.Id }, null) |
                @Html.ActionLink("刪除", "Delete", "客戶銀行資訊", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>